<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="3dp"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tvActivityTag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:gravity="center|start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvActivityTotalTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Android" />

    <TextView
        android:id="@+id/tvActivityTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="22sp"
        android:layout_marginHorizontal="6dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/tvActivityTag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvActivityTag"
        app:layout_constraintTop_toTopOf="@id/tvActivityTag"
        tools:text="17:07:00" />

</androidx.constraintlayout.widget.ConstraintLayout>